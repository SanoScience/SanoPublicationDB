
<%= turbo_frame_tag dom_id(research_group) do %>
  <div class="d-flex justify-content-between align-items-center border rounded p-2 mb-2">
    <strong><%= research_group.name %></strong>

    <% if current_user.moderator? %>
      <div class="d-flex gap-2">
        <%= link_to "Edit",
                    edit_research_group_path(research_group),
                    data: { turbo_stream: true },
                    class: "btn btn-sm btn-outline-secondary" %>

        <%= button_to "Delete",
                      research_group_path(research_group),
                      method: :delete,
                      form: { data: { turbo_confirm: "Delete research group?" } },
                      class: "btn btn-sm btn-outline-danger" %>
      </div>
    <% end %>
  </div>
<% end %>
